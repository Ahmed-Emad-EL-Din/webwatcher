# MongoDB Connection
MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/webspider

# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Notification Proxy (Netlify Function URL)
# In production, this should be your Netlify site URL (e.g., https://your-site.netlify.app)
NETLIFY_URL=http://localhost:8888

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Email Configuration (SMTP) - Used by notify.js
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password

# Google OAuth (Frontend)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
